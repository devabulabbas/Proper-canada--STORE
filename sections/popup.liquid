              },
              {
                "value": "6",
                "label": "t:sections.popup.settings.frequency.options__2.label"
              },
              {
                "value": "24",
                "label": "t:sections.popup.settings.frequency.options__3.label"
              },
              {
                "value": "72",
                "label": "t:sections.popup.settings.frequency.options__4.label"
              },
              {
                "value": "168",
                "label": "t:sections.popup.settings.frequency.options__5.label"
              },
              {
                "value": "0",
                "label": "t:sections.popup.settings.frequency.options__6.label"
              }
