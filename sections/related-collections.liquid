{{ 'component-product-related-collections.css' | asset_url | stylesheet_tag }}

{%- liquid 
  assign top_padding_mobile = section.settings.top_padding | divided_by: 4
  assign bottom_padding_mobile = section.settings.bottom_padding | divided_by: 4
-%}

{% style %}
  #shopify-section-{{ section.id }} {
    --padding-top: {{ section.settings.desktop_padding_top }}px;
    --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    --desktop-grid-type: {{ section.settings.desktop_grid_type }};
  }
  @media screen and (max-width: 920px) {
  #shopify-section-{{ section.id }} {
    --padding-top: {{ section.settings.mobile_padding_top }}px;
    --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }
}
{% endstyle %}

<div class="related-collections__wrapper ordinal-section ordinal-section--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines{% endif %}  related-collections__wrapper--{{ settings.white_space }} {% if settings.show_lines %}related-collections__wrapper--lines{% endif %} section-padding--{{ settings.white_space }} {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}">
  {%- render 'product-related-collections', related_collections_settings: section.settings, block_item: block, section_content: true -%}
</div>

