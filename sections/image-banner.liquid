        {
          "type": "checkbox",
          "id": "fill_content",
          "default": true,
          "label": "t:sections.banners.fill_content.label"
        },
        {
            "type": "color",
            "id": "overlay_color",
            "label": "t:sections.all.image.overlay_color.label",
