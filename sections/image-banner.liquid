{
    "name": "t:sections.image-banner.name",
    "tag": "section",
    "class": "image-banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "content_on_hover",
        "default": false,
        "label": "t:sections.banners.content_on_hover.label"
      },
        {
            "type": "image_picker",
            "id": "first_image",
            "label": "t:sections.image-banner.settings.first_image.label"
        },
