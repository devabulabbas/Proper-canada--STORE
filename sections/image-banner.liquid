{% if request.design_mode or section.settings.first_image != blank or section.settings.second_image != blank %}
{{ 'content-fonts.css' | asset_url | stylesheet_tag }}
{{ 'section-banner.css' | asset_url | stylesheet_tag }}
{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{% liquid
    assign image_banner_overlay_background = section.settings.overlay_color
    if section.settings.overlay_gradient != blank
      assign image_banner_overlay_background = section.settings.overlay_gradient
    endif

    assign settings_page_width = settings.max_page_width | append: 'px'
    if settings.max_page_width == 'full_width'
      assign settings_page_width = '100vw'
    endif
%}

{% style %}
    #shopify-section-{{ section.id }} {
      --padding-top: {{ section.settings.desktop_padding_top }}px;
      --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
      --vertical-position: {{ section.settings.vertical_content_position }};
      --horizontal-position: {{ section.settings.horizontal_content_position }};
      --overlay-background: {{ image_banner_overlay_background }};
      --section-height: {{ section.settings.desktop_height }}vh;
      --video-mobile-height: {{ section.settings.mobile_height }}vh;
      --banner-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  
      {% if section.settings.color_type == 'invert' %}
          --layout-text-color:
          {{ settings.layout_background_color.red }},
          {{ settings.layout_background_color.green }},
          {{ settings.layout_background_color.blue }};
          --layout-background-color:
          {{ settings.layout_text_color.red }},
          {{ settings.layout_text_color.green }}, 
          {{ settings.layout_text_color.blue }};
      {% endif %}
      {% if section.settings.color_type == 'custom' %}
          --layout-text-color:
          {{ section.settings.text_color.red }},
          {{ section.settings.text_color.green }}, 
          {{ section.settings.text_color.blue }};
          --layout-background-color:
          {{ section.settings.background_color.red }},
          {{ section.settings.background_color.green }}, 
          {{ section.settings.background_color.blue }};
      {% endif %}  
      color: rgb(var(--layout-text-color));
    }
    #shopify-section-{{ section.id }} .banner__content {
      background-color: rgb(var(--layout-background-color));
      color: rgb(var(--layout-text-color));
    }
    #shopify-section-{{ section.id }} .hidden-backgroud .banner__content-wrapper,
    #shopify-section-{{ section.id }} .banner__content {
      background-color: transparent;
    }
    @media screen and (max-width: 920px) {
      #shopify-section-{{ section.id }} {
        --padding-top: {{ section.settings.mobile_padding_top }}px;
        --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      }
      #shopify-section-{{ section.id }}:first-child,
      #shopify-section-{{ section.id }}:first-child .overlapping-section .overlapping-content-js {
          margin-top: 0 !important;
      }
    }
    #shopify-section-{{ section.id }} .banner__media::after {
      opacity: var(--banner-overlay-opacity);
      background: var(--overlay-background);
    }
    @media screen and (min-width: 921px) {
      {% if section.settings.section_width == 'overlap' and settings.allow_transparent_navigation %}
            #shopify-section-{{ section.id }}:first-child {
              margin-top: -100px;
          }
          @supports selector(:has(+ *)) {
              #shopify-section-{{ section.id }}:first-child {
                  margin-top: 0px;
              }
          }
      {% endif %}
      #shopify-section-{{ section.id }}:first-child .image-banner__media {
            {% if section.settings.section_width == 'overlap' and settings.allow_transparent_navigation %}
                width: 100vw !important;
            {% endif %}
            {% if settings.navigation_layout == 'sidebar_based' and settings.white_space == 'compact' and section.settings.section_width == 'overlap' and settings.allow_transparent_navigation %}
                {% if settings.sidebar_template == 'main_xs' or settings.sidebar_template == 'main_xs_with_secondary' %}
                    transform: translate(min(-12.5%, -200px));
                {% elsif settings.sidebar_template == 'main_s' or settings.sidebar_template == 'main_s_with_secondary' %}
                    transform: translate(min(-18.75%, -200px));
                {% elsif settings.sidebar_template == 'main_m' or settings.sidebar_template == 'main_m_with_secondary' %}
                    transform: translate(min(-25%, -200px));
                {% elsif settings.sidebar_template == 'main_l' %}
                    transform: translate(min(-50%, -200px));
                {% endif %}
            {% endif %}
            {% if settings.navigation_layout == 'sidebar_based' and settings.white_space == 'spacious' and section.settings.section_width == 'overlap' and settings.allow_transparent_navigation %}
                {% if settings.sidebar_template == 'main_xs' or settings.sidebar_template == 'main_xs_with_secondary' %}
                    transform: translate(min(-12.5%, -280px));
                {% elsif settings.sidebar_template == 'main_s' or settings.sidebar_template == 'main_s_with_secondary' %}
                    transform: translate(min(-18.75%, -280px));
                {% elsif settings.sidebar_template == 'main_m' or settings.sidebar_template == 'main_m_with_secondary' %}
                    transform: translate(min(-25%, -280px));
                {% elsif settings.sidebar_template == 'main_l' %}
                    transform: translate(min(-50%, -280px));
                {% endif %}
            {% endif %}
        }
    }
    #shopify-section-{{ section.id }}:first-child .overlapping-section {
      padding-bottom: 0!important;
      padding-top: 0!important;
    }
{% endstyle %}

<div class="image-banner banner banner--{{ settings.white_space }} {% if settings.allow_transparent_navigation and section.settings.section_width == 'overlap' %}overlapping-section{% endif %} {% if section.settings.desktop_height == 100 %}full-height{% endif %} {% if settings.allow_transparent_navigation and section.settings.section_width == 'overlap' %}banner--overlapping{% else %}banner--{{ section.settings.section_width }}{% endif %} ordinal-section ordinal-section--{{ settings.white_space }} {% if section.settings.section_width == 'overlap' %}no-padding{% endif %} {% if settings.show_lines %}ordinal-section--lines lines{% endif %}  {% if section.settings.section_width == 'wide' %}section-padding--{{ settings.white_space }}{% endif %} {% if section.settings.section_width == 'wide' %}{% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}{% endif %} color-{{ section.settings.color_type }} {% if section.settings.color_type != 'default' %}no-default-color{% endif %}">
    <div class="banner__wrapper {% if section.settings.content_under_image %}below{% else %}over{% endif %} {% if section.settings.content_on_hover %}hover-content{% endif %} {% if section.settings.section_width == 'overlap' %}hidden-radius{% endif %}">
        <div class="banner__media image-banner__media overlapping-container-js">
          {% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
            {%- if section.settings.first_image != blank -%}
                <div class="image-banner__media-block {% unless section.settings.second_image != blank %}one-child{% endunless %} {% if section.settings.only_first_image %}hidden-secondary-block{% endif %}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                    <img srcset="{%- if section.settings.first_image.width >= 165 -%}{{ section.settings.first_image | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if section.settings.first_image.width >= 375 -%}{{ section.settings.first_image | image_url: width: 375 }} 375w,{%- endif -%}
                    {%- if section.settings.first_image.width >= 550 -%}{{ section.settings.first_image | image_url: width: 550 }} 550w,{%- endif -%}
                    {%- if section.settings.first_image.width >= 750 -%}{{ section.settings.first_image | image_url: width: 750 }} 750w,{%- endif -%}
                    {%- if section.settings.first_image.width >= 1100 -%}{{ section.settings.first_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                    {%- if section.settings.first_image.width >= 1500 -%}{{ section.settings.first_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                    {%- if section.settings.first_image.width >= 2200 -%}{{ section.settings.first_image | image_url: width: 2200 }} 2200w,{%- endif -%}
                    {%- if section.settings.first_image.width >= 3000 -%}{{ section.settings.first_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                    {{ section.settings.first_image | image_url }} {{ section.settings.first_image.width }}w" src="{{ section.settings.first_image | image_url: width: 1700 }}"
                    {% if section.settings.second_image != blank %}
                      sizes="(min-width: {{ settings_page_width }}) calc({{ settings_page_width }} / 2), calc(100vw / 2)"
                    {% else %}
                      sizes="(min-width: {{ settings_page_width }}) {{ settings_page_width }}, 100vw"
                    {% endif %}
                    alt="{{ section.settings.first_image.alt | escape }}" 
                    src="{{ section.settings.first_image | image_url: width: 1500 }}"
                    {% if section.index > 2 %}loading="lazy"{% endif %}
                    draggable="false"
                    width="{{ section.settings.first_image.width }}" 
                    height="{{ section.settings.first_image.height }}" 
                    class="banner__image image-banner__image"
                    style="object-position: {{ section.settings.first_image.presentation.focal_point }};">
                </div>
            {%- endif -%}
            {%- if section.settings.second_image != blank -%}
                <div class="image-banner__media-block {% unless section.settings.first_image != blank %}one-child{% endunless %} {% if section.settings.only_first_image %}hidden-block{% endif %}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                    <img srcset="{%- if section.settings.second_image.width >= 165 -%}{{ section.settings.second_image | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if section.settings.second_image.width >= 375 -%}{{ section.settings.second_image | image_url: width: 375 }} 375w,{%- endif -%}
                    {%- if section.settings.second_image.width >= 550 -%}{{ section.settings.second_image | image_url: width: 550 }} 550w,{%- endif -%}
                    {%- if section.settings.second_image.width >= 750 -%}{{ section.settings.second_image | image_url: width: 750 }} 750w,{%- endif -%}
                    {%- if section.settings.second_image.width >= 1100 -%}{{ section.settings.second_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                    {%- if section.settings.second_image.width >= 1500 -%}{{ section.settings.second_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                    {%- if section.settings.second_image.width >= 2200 -%}{{ section.settings.second_image | image_url: width: 2200 }} 2200w,{%- endif -%}
                    {%- if section.settings.second_image.width >= 3000 -%}{{ section.settings.second_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                    {{ section.settings.second_image | image_url }} {{ section.settings.second_image.width }}w" src="{{ section.settings.second_image | image_url: width: 1700 }}"
                    {% if section.settings.first_image != blank %}
                      sizes="(min-width: {{ settings_page_width }}) calc({{ settings_page_width }} / 2), calc(100vw / 2)"
                    {% else %}
                      sizes="(min-width: {{ settings_page_width }}) {{ settings_page_width }}, 100vw"
                    {% endif %}
                    alt="{{ section.settings.second_image.alt | escape }}" 
                    src="{{ section.settings.second_image | image_url: width: 1500 }}"
                    {% if section.index > 2 %}loading="lazy"{% endif %}
                    draggable="false"
                    width="{{ section.settings.second_image.width }}" 
                    height="{{ section.settings.second_image.height }}" 
                    class="banner__image image-banner__image"
                    style="object-position: {{ section.settings.second_image.presentation.focal_point }};">
                </div>
            {%- endif -%}
            {% if section.settings.first_image == blank and section.settings.second_image == blank %}
                <div class="image-banner__media-block one-child" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
            {% endif %}
            {% comment %}theme-check-enable ImgLazyLoading{% endcomment %}
        </div>
        <div class="banner__content overlapping-content-js {% if section.settings.narrow_content %}narrow-container{% else %}wide-container{% endif %} {% if section.settings.fill_content == false %} hidden-backgroud{% endif %}"
          data-bg="{%- if section.settings.color_type == 'default' -%}{{ settings.layout_background_color.red }}, {{ settings.layout_background_color.green }}, {{ settings.layout_background_color.blue }}{%- endif -%}
          {%- if section.settings.color_type == 'invert' -%}{{ settings.layout_text_color.red }}, {{ settings.layout_text_color.green }}, {{ settings.layout_text_color.blue }}{%- endif -%}
          {%- if section.settings.color_type == 'custom' -%}{{ section.settings.background_color.red }}, {{ section.settings.background_color.green }}, {{ section.settings.background_color.blue }}{%- endif -%}"
          data-color="{%- if section.settings.color_type == 'default' -%}{{ settings.layout_text_color.red }}, {{ settings.layout_text_color.green }}, {{ settings.layout_text_color.blue }}{%- endif -%}
          {%- if section.settings.color_type == 'invert' -%}{{ settings.layout_background_color.red }}, {{ settings.layout_background_color.green }}, {{ settings.layout_background_color.blue }}{%- endif -%}
          {%- if section.settings.color_type == 'custom' -%}{{ section.settings.text_color.red }}, {{ section.settings.text_color.green }}, {{ section.settings.text_color.blue }}{%- endif -%}">
            {% if section.blocks.size > 0 %}
            <div class="banner__content-wrapper {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %} {% if section.settings.center_text %}center{% else %}start{% endif %}" style="text-align: {% if section.settings.center_text %}center{% else %}start{% endif %};">
                {%- for block in section.blocks -%}
                    {%- case block.type -%}
                        {%- when 'subheading' -%}
                            <{{ block.settings.subheading_tag }} {{ block.shopify_attributes }} class="content-subheading content-subheading--{{ settings.typography_preset }} {% if block.settings.subheading_size != 'default' %}{{ block.settings.subheading_size }}{% endif %} {% if settings.dim_text %}dim{% endif %}">{{ block.settings.subheading }}</{{ block.settings.subheading_tag }}>
                        {%- when 'heading' -%}   
                            <{{ block.settings.heading_tag }} {{ block.shopify_attributes }} class="content-heading {% if section.settings.color_type == 'default' and settings.accent_color_for_headings %}content-heading--accent{% endif %} content-heading--{{ settings.typography_preset }} {% if block.settings.heading_size != 'default' %}{{ block.settings.heading_size }}{% endif %}">{{ block.settings.heading }}</{{ block.settings.heading_tag }}>
                        {%- when 'text' -%}
                            <div {{ block.shopify_attributes }} class="content-text content-text--{{ settings.typography_preset }} {% if block.settings.dim_text %}dim{% endif %} richtext {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}">
                              {{ block.settings.text }}
                            </div>
                        {%- when 'context_image' -%}
                          {%- render 'context-image', block_or_section: block, shopify_attributes: true -%}
                        {%- when 'block_image' -%}
                          {%- render 'block-image', block: block -%}
                        {%- when 'button' -%}
                          {%- render 'button', block: block -%}
                        {%- when 'line' -%}
                          {%- render 'line', block: block -%}
                        {%- when 'empty_space' -%}
                          {%- render 'empty-space', block: block -%}
                        {%- when 'video_button' -%}
                          {%- render 'video-button', block_settings: block.settings, block: block -%}
                        {%- when 'custom_liquid' -%}
                          {%- render 'custom-liquid', block: block -%}
                        {%- when 'promo_code' -%}
                          {%- render 'promo-code', block: block, promo_code: block.settings.promo_code -%}
                        {%- endcase -%}       
                {%- endfor -%}
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endif %}

