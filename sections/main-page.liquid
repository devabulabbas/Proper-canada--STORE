{{ 'section-main-page.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}
{% style %}
#shopify-section-{{ section.id }} {
    --padding-top: {{ section.settings.desktop_padding_top }}px;
    --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
}
@media screen and (max-width: 920px) {
  #shopify-section-{{ section.id }} {
    --padding-top: {{ section.settings.mobile_padding_top }}px;
    --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }
}
{% endstyle %}

<div class="ordinal-section ordinal-section--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines{% endif %}  {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }} section-padding--{{ settings.white_space }}">
    <div class="page page--{{ settings.white_space }} page--{{ section.settings.section_width }}">
        {% unless section.settings.hide_heading %}<{{ section.settings.heading_tag }} class="page__title {% if settings.accent_color_for_headings %}heading--accent{% endif %} heading--{{ settings.typography_preset }} {% if section.settings.heading_size != 'default' %}{{ section.settings.heading_size }}{% endif %} {% if settings.center_text %} center{% endif %}">
          {% if section.settings.heading != blank %}
            {{ section.settings.heading | escape }}
          {% else %}
            {{ page.title | escape }}
          {% endif %}
        </{{ section.settings.heading_tag }}>{% endunless %}
        <div class="page__content body-text--{{ settings.typography_preset }} rte">
        {{ page.content }}
        </div>
    </div>
</div>

