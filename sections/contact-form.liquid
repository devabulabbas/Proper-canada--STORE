{% style %}
    #shopify-section-{{ section.id }} {
        --padding-top: {{ section.settings.desktop_padding_top }}px;
        --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
        --image-position: {% if section.settings.swap_position %}row{% else %}row-reverse{% endif %};
        --vertical-position: 'start';
        --horizontal-position: 'flex-start';
        --page-width: {{ settings.max_page_width }}px;

        {% if section.settings.color_type == 'invert' %}
            --layout-text-color:
            {{ settings.layout_background_color.red }},
            {{ settings.layout_background_color.green }},
            {{ settings.layout_background_color.blue }};
            --layout-background-color:
            {{ settings.layout_text_color.red }},
            {{ settings.layout_text_color.green }}, 
            {{ settings.layout_text_color.blue }};
        {% endif %}
        {% if section.settings.color_type == 'custom' %}
            --layout-text-color:
            {{ section.settings.text_color.red }},
            {{ section.settings.text_color.green }}, 
            {{ section.settings.text_color.blue }};
            --layout-background-color:
            {{ section.settings.background_color.red }},
            {{ section.settings.background_color.green }}, 
            {{ section.settings.background_color.blue }};
        {% endif %}  
        background-color: rgb(var(--layout-background-color));
        color: rgb(var(--layout-text-color));
    }

    #shopify-section-{{ section.id }} .media-with-text__media.show_container {
        color: rgb(var(--layout-background-color));
        background-color: rgb(var(--layout-text-color));
    }
    @media screen and (max-width: 920px) {
        #shopify-section-{{ section.id }} {
            --padding-top: {{ section.settings.mobile_padding_top }}px;
            --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
        }
    }
{% endstyle %}
{% assign sizeArrayBlocks = section.blocks | size %}

<div class="contact-form contact-form--{{ settings.white_space }} ordinal-section ordinal-section--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines{% endif %}  media-with-text media-with-text--{{ settings.white_space }} {% if settings.show_lines %}lines{% endif %} section-padding--{{ settings.white_space }} {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }} {% if sizeArrayBlocks == 0 %}media-with-text--narrow{% else %}media-with-text--wide{% endif %} {% if section.settings.swap_position %}image-left{% else %}image-right{% endif %} no-fill-section color-{{ section.settings.color_type }} {% if section.settings.color_type != 'default' %}no-default-color{% endif %} {% if section.settings.show_container %}exclude-lines{% else %}include-lines{% endif %}">
    <div class="media-with-text__wrapper">
      <div class="media-with-text__card half {% if section.blocks.size == 0 %}form-centered{% endif %}">
          <div class="media-with-text__media {% if section.settings.swap_position %}right-padding--media{% else %}left-padding--media{% endif %} {% if section.settings.show_container %}show_container{% else %}hide_container{% endif %}">
            <div class="contact-form__wrapper {% if section.settings.show_container %}color-invert no-default-color{% endif %}">
                {% style %}
                    #shopify-section-{{ section.id }} .contact-form__wrapper.color-invert {
                        --layout-text-color:
                            {{ settings.layout_background_color.red }},
                            {{ settings.layout_background_color.green }},
                            {{ settings.layout_background_color.blue }};
                        --layout-background-color:
                            {{ settings.layout_text_color.red }},
                            {{ settings.layout_text_color.green }}, 
                            {{ settings.layout_text_color.blue }};
                    }
                    #shopify-section-{{ section.id }} .color-invert .contact-form__wrapper.color-invert {
                        --layout-text-color:
                            {{ settings.layout_text_color.red }},
                            {{ settings.layout_text_color.green }}, 
                            {{ settings.layout_text_color.blue }};
                        --layout-background-color:
                            {{ settings.layout_background_color.red }},
                            {{ settings.layout_background_color.green }},
                            {{ settings.layout_background_color.blue }};
                    }
                    #shopify-section-{{ section.id }} .color-custom .contact-form__wrapper.color-invert {
                        --layout-text-color:
                        {{ section.settings.background_color.red }},
                        {{ section.settings.background_color.green }}, 
                        {{ section.settings.background_color.blue }};
                        --layout-background-color:
                        {{ section.settings.text_color.red }},
                        {{ section.settings.text_color.green }}, 
                        {{ section.settings.text_color.blue }};
                    }
                {% endstyle %}
                {% if section.settings.heading != blank %}
                    <{{ section.settings.heading_tag }} class="content-heading {% if section.settings.color_type == 'default' and settings.accent_color_for_headings %}content-heading--accent{% endif %} content-heading--{{ settings.typography_preset }} {% if section.settings.heading_size != 'default' %}{{ section.settings.heading_size }}{% endif %}">{{ section.settings.heading }}</{{ section.settings.heading_tag }}>
                {% endif %}
                <form-state>
                    {%- assign form_id = 'ContactForm-' | append: section.id -%}
                    {%- form 'contact', id: form_id -%}
                      {%- if form.posted_successfully? -%}
                        <div class="form-status subheading subheading--{{ settings.typography_preset }} success-color" tabindex="-1" autofocus>
                          {{ 'templates.contact.form.post_success' | t }}
                        </div>
                      {%- endif -%}
                      {%- if form.errors contains 'email' -%}
                        <div id="ContactForm-email-error-{{ section.id }}" autofocus>
                        <p class="subheading subheading--{{ settings.typography_preset }} error-color">
                            {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                        </p>
                        </div>
                    {%- endif -%}
                        <div class="fields-wrapper">
                            <div class="field">
                                <label class="label label--{{ settings.typography_preset }} {% if settings.dim_text %}dim{% endif %}" for="{{ form_id }}-name" >{{ 'templates.contact.form.name' | t | append: '*' }}</label>
                                <input 
                                    id="{{ form_id }}-name" 
                                    class="input input--{{ settings.typography_preset }} required {% if form.errors %}invalid{% endif %}" 
                                    autocomplete="name" 
                                    type="text" 
                                    name="contact[{{ 'templates.contact.form.name' | t }}]" 
                                    value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" 
                                    placeholder="{{ section.settings.name_placeholder }}"/>
                            </div>
                            <div class="field">
                                <label class="label label--{{ settings.typography_preset }} {% if settings.dim_text %}dim{% endif %}" for="{{ form_id }}-email">{{ 'templates.contact.form.email' | t | append: '*' }}</label>
                                <input
                                    id="{{ form_id }}-email"
                                    autocomplete="email"
                                    type="email"
                                    id="ContactForm-email-{{ section.id }}"
                                    class="input input--{{ settings.typography_preset }} required {% if form.errors contains 'email' %}invalid{% endif %}"
                                    name="contact[email]"
                                    spellcheck="false"
                                    autocapitalize="off"
                                    value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                                    aria-required="true"
                                    {% if form.errors contains 'email' %}
                                    aria-invalid="true"
                                    aria-describedby="ContactForm-email-error-{{ section.id }}"
                                    {% endif %}
                                    placeholder="{{ section.settings.email_placeholder }}"
                                    required="required"/>
                            </div>
                            {%- if section.settings.show_phone -%}
                            <div class="field">
                                <label class="label label--{{ settings.typography_preset }} {% if settings.dim_text %}dim{% endif %}" for="{{ form_id }}-phone">{{ 'templates.contact.form.phone' | t }}</label>
                                <input 
                                    id="{{ form_id }}-phone" 
                                    type="tel" 
                                    class="input input--{{ settings.typography_preset }}" 
                                    autocomplete="tel" 
                                    name="contact[{{ 'templates.contact.form.phone' | t }}]" 
                                    pattern="[0-9\-]*" 
                                    value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" 
                                    placeholder="{{ section.settings.phone_placeholder }}"/>
                            </div>
                            {%- endif -%}
                            {%- if section.settings.show_message -%}
                            <div class="field">
                                <label class="label label--{{ settings.typography_preset }} {% if settings.dim_text %}dim{% endif %}" for="{{ form_id }}-body">{{ 'templates.contact.form.comment' | t }}</label>
                                <textarea
                                id="{{ form_id }}-body"
                                rows="10"
                                class="text-area input--{{ settings.typography_preset }}"
                                name="contact[{{ 'templates.contact.form.comment' | t }}]"
                                placeholder="{{ section.settings.message_placeholder }}">
                                {{- form.body -}}
                                </textarea>
                            </div>
                        {%- endif -%}
                        </div>
                      <div class="contact__button {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %}">
                        <button type="submit" class="button big-button big-button--{{ settings.typography_preset }}">
                          {{ 'templates.contact.form.send' | t }}
                        </button>
                      </div>
                      <div class="rte richtext body-secondary-text--{{ settings.typography_preset }} {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}">
                        {{ 'shopify.online_store.spam_detection.disclaimer_html' | t }}
                      </div>
                    {%- endform -%}
                  </form-state>
            </div>
