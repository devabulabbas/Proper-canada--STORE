{%- liquid
  assign show_popup = true
  if section.settings.disable_for_registered_users and customer
    assign show_popup = false
  endif
  if section.settings.only_homepage and request.page_type != 'index'
    assign show_popup = false
  endif   
  if settings.typography_preset == 'avant_garde'
    assign weight = settings.accent_icon_weight
    if settings.swap_fonts
        assign weight = settings.base_icon_weight
    endif
  else 
      assign weight =  settings.base_icon_weight
      if settings.swap_fonts
          assign weight = settings.accent_icon_weight
      endif
  endif
-%}

{% style %}
  #shopify-section-{{ section.id }} {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    visibility: visible;
    bottom: auto;
    z-index: 27;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    color: rgb(var(--layout-text-color));
    {% if section.settings.color_type == 'invert' %}
      --layout-text-color:
        {{ settings.popup_background_color.red }},
        {{ settings.popup_background_color.green }},
        {{ settings.popup_background_color.blue }};
      --popup-background-color:
          {{ settings.layout_text_color.red }},
          {{ settings.layout_text_color.green }}, 
          {{ settings.layout_text_color.blue }};
      --layout-background-color:
          {{ settings.layout_text_color.red }},
          {{ settings.layout_text_color.green }}, 
          {{ settings.layout_text_color.blue }};
    {% endif %}
    {% if section.settings.color_type == 'custom' %}
      --layout-text-color:
          {{ section.settings.text_color.red }},
          {{ section.settings.text_color.green }}, 
          {{ section.settings.text_color.blue }};
      --layout-background-color:
          {{ section.settings.background_color.red }},
          {{ section.settings.background_color.green }}, 
          {{ section.settings.background_color.blue }};
      --popup-background-color:
          {{ section.settings.background_color.red }},
          {{ section.settings.background_color.green }}, 
          {{ section.settings.background_color.blue }};
    {% endif %}
  }
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon,
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_m,
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_m_uppercase {
    height: {{ 26 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
  }
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.heading_xs,
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.heading_xs_uppercase {
    height: {{ 36 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
  }
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_l,
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_l_uppercase {
    height: {{ 28 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
  }
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_s,
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_s_uppercase {
    height: {{ 24 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
  }
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.label,
  #shopify-section-{{ section.id }} .promo-sticky-tab__icon.label_uppercase {
    height: {{ 20 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
  }

  @media screen and (max-width: 920px) {
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon,
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_m,
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_m_uppercase {
      height: {{ 26 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
    }
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.heading_xs,
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.heading_xs_uppercase {
      height: {{ 36 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
    }
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_l,
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_l_uppercase {
      height: {{ 28 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
    }
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_s,
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.body_s_uppercase {
      height: {{ 24 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
    }
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.label,
    #shopify-section-{{ section.id }} .promo-sticky-tab__icon.label_uppercase {
      height: {{ 20 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 20 }}px;
    }
  }
{% endstyle %}

{% if show_popup %}
  {{ 'content-fonts.css' | asset_url | stylesheet_tag }}
  {{ 'component-popup.css' | asset_url | stylesheet_tag }}
  {{ 'promo-popup.css' | asset_url | stylesheet_tag }}
  {{ 'section-flyout.css' | asset_url | stylesheet_tag }}
  <promo-popup data-section-id="{{ section.id }}" class="hidden {% if section.settings.color_type != 'default' %}no-default-color{% endif %}" data-delay-type="scroll" data-delay="{{ section.settings.delay }}" data-frequency="{{ section.settings.frequency }}">
    <div class="promo-popup promo-popup--{{ settings.white_space }}">
      <div class="popup-wrapper popup-wrapper--{{ section.settings.position_flyout }}" data-position="{{ section.settings.position_flyout }}">
        <div class="button-wrapper {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %}">
          {% style %}
            #shopify-section-{{ section.id }} .button-close {
              {% if section.settings.color_type == 'invert' %}
                --layout-text-color:
                  {{ settings.popup_background_color.red }},
                  {{ settings.popup_background_color.green }},
                  {{ settings.popup_background_color.blue }};
                --popup-background-color:
                    {{ settings.layout_text_color.red }},
                    {{ settings.layout_text_color.green }}, 
                    {{ settings.layout_text_color.blue }};
                --layout-background-color:
                    {{ settings.layout_text_color.red }},
                    {{ settings.layout_text_color.green }}, 
                    {{ settings.layout_text_color.blue }};
              {% endif %}
              {% if section.settings.color_type == 'custom' %}
                --layout-text-color:
                    {{ section.settings.text_color.red }},
                    {{ section.settings.text_color.green }}, 
                    {{ section.settings.text_color.blue }};
                --layout-background-color:
                    {{ section.settings.background_color.red }},
                    {{ section.settings.background_color.green }}, 
                    {{ section.settings.background_color.blue }};
                --popup-background-color:
                    {{ section.settings.background_color.red }},
                    {{ section.settings.background_color.green }}, 
                    {{ section.settings.background_color.blue }};
              {% endif %}
            }
          {% endstyle %}
          <button type="button" class="button-close close-popup" data-popup-toggle aria-label="{{ 'accessibility.close' | t }}">
            {% if weight == 'regular' %}
                {% render 'icon', icon: 'cross-regular' %}
            {% elsif weight == 'medium' %}
                {% render 'icon', icon: 'cross-medium' %}
            {% elsif weight == 'bold' %}
                {% render 'icon', icon: 'cross-bold' %}
            {% endif %}
          </button>
        </div>
        <div class="popup-container">
          {% if section.settings.image != blank %}
            {% if section.settings.image_link != blank %}<a href="{{ section.settings.image_link }}" {% if section.settings.target_blank %}target="_blank"{% endif %} class="popup-image ratio-{{ section.settings.image_ratio }} {% if section.settings.show_image_on_mobile or section.blocks.size == 0 %}visible-mobile{% endif %}">
            {% else %}<div class="popup-image ratio-{{ section.settings.image_ratio }} {% if section.settings.show_image_on_mobile or section.blocks.size == 0 %}visible-mobile{% endif %}">{% endif %}
              <img srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
              {%- if section.settings.image.width >= 550 -%}{{ section.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
              {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
              {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
              {{ section.settings.image | image_url }} {{ section.settings.image.width }}w" src="{{ section.settings.image | image_url: width: 1200 }}"
              sizes="calc(720px * 1)"
              alt="{{ section.settings.image.alt | escape }}" 
              src="{{ section.settings.image | image_url: width: 1200 }}"
              loading="lazy"
              draggable="false" 
              width="{{ section.settings.image.width }}" 
              height="{{ section.settings.image.height }}" 
              class="block-media__image"
              style="object-position: {{ section.settings.image.presentation.focal_point }};"
            >
            {% if section.settings.image_link != blank %}</a>{% else %}</div>{% endif %}
          {% endif %}
          {% if section.blocks.size > 0 %}
            <div class="popup-content {% if section.settings.center_text %}center{% endif %}">
              {% for block in section.blocks %}
                {%- case block.type -%}
                  {%- when 'subheading' -%}
                    {% if block.settings.subheading != blank %}
                      <{{ block.settings.subheading_tag }} {{ block.shopify_attributes }} class="content-subheading content-subheading--{{ settings.typography_preset }} {% if block.settings.subheading_size != 'default' %}{{ block.settings.subheading_size }}{% endif %} {% if settings.dim_text %}dim{% endif %}">{{ block.settings.subheading }}</{{ block.settings.subheading_tag }}>
                    {% endif %}
                  {%- when 'heading' -%}   
                    <{{ block.settings.heading_tag }} {{ block.shopify_attributes }} class="content-heading {% if section.settings.color_type == 'default' and settings.accent_color_for_headings %}content-heading--accent{% endif %} content-heading--{{ settings.typography_preset }} {% if block.settings.heading_size != 'default' %}{{ block.settings.heading_size }}{% endif %}">{{ block.settings.heading }}</{{ block.settings.heading_tag }}>
                  {%- when 'text' -%}
                    <div class="content-text content-text--{{ settings.typography_preset }} {% if block.settings.dim_text %}dim{% endif %} richtext {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}" {{ block.shopify_attributes }}>
                      <object>
                        {{ block.settings.text }}
                      </object>
                    </div>
                  {%- when 'button' -%}
                    {%- render 'button', block: block -%}
                  {%- when 'context_image' -%}
                    {%- render 'context-image', block_or_section: block, shopify_attributes: true -%}
                  {%- when 'block_image' -%}
                    {% style %}
                      .block-media--{{ block.id }} {
                        {% if block.settings.image_radius == 'default' %}
                        --block-image-radius: {{ settings.images_and_sections_radius }};
                        {% else %}
                        --block-image-radius: {{ block.settings.image_radius }};
                        {% endif %}
                      }
                    {% endstyle %}
                    {%- if block.settings.desktop_image != blank -%}
                        {%- if block.settings.image_link != blank -%}<a href="{{ block.settings.image_link }}" {% if block.settings.target_blank %}target="_blank"{% endif %} class="block-media block-media--{{ block.id }} block-media--desktop {% unless block.settings.mobile_image != blank %} block-media--all {% endunless %} ratio-{{ block.settings.desktop_image_ratio }} {% if block.settings.mobile_image == blank %}mobile-ratio-{{ block.settings.mobile_image_ratio }}{% endif %}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %} {{ block.shopify_attributes }}>
                        {%- else -%}<div class="block-media block-media--{{ block.id }} block-media--desktop {% unless block.settings.mobile_image != blank %} block-media--all {% endunless %} ratio-{{ block.settings.desktop_image_ratio }} {% if block.settings.mobile_image == blank %}mobile-ratio-{{ block.settings.mobile_image_ratio }}{% endif %}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %} {{ block.shopify_attributes }}>
                        {%- endif -%}
                          <img srcset="{%- if block.settings.desktop_image.width >= 165 -%}{{ block.settings.desktop_image | image_url: width: 165 }} 165w,{%- endif -%}
                            {%- if block.settings.desktop_image.width >= 375 -%}{{ block.settings.desktop_image | image_url: width: 375 }} 375w,{%- endif -%}
                            {%- if block.settings.desktop_image.width >= 550 -%}{{ block.settings.desktop_image | image_url: width: 550 }} 550w,{%- endif -%}
                            {%- if block.settings.desktop_image.width >= 750 -%}{{ block.settings.desktop_image | image_url: width: 750 }} 750w,{%- endif -%}
                            {%- if block.settings.desktop_image.width >= 1100 -%}{{ block.settings.desktop_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                            {%- if block.settings.desktop_image.width >= 1500 -%}{{ block.settings.desktop_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                            {{ block.settings.desktop_image | image_url }} {{ block.settings.desktop_image.width }}w" src="{{ block.settings.desktop_image | image_url: width: 1200 }}"
                            {% if section.settings.text_width == 'wide' %}
                              sizes="calc(1200px * 1)"
                            {% else %}
                              sizes="calc(720px * 1)"
                            {% endif %}
                            alt="{{ block.settings.desktop_image.alt | escape }}" 
                            src="{{ block.settings.desktop_image | image_url: width: 1200 }}"
                            loading="lazy"
                            draggable="false" 
                            width="{{ block.settings.desktop_image.width }}" 
                            height="{{ block.settings.desktop_image.height }}" 
                            class="block-media__image block-media__image--desktop"
                            style="object-position: {{ block.settings.desktop_image.presentation.focal_point }};">
                      {%- if block.settings.image_link != blank -%}</a>{%- else -%}</div>{%- endif -%}
                    {%- endif -%}
                    {%- if block.settings.mobile_image != blank -%}
                        {%- if block.settings.image_link != blank -%}<a href="{{ block.settings.image_link }}" {% if block.settings.target_blank %}target="_blank"{% endif %} class="block-media block-media--{{ block.id }} {% if block.settings.desktop_image != blank %}block-media--mobile{% endif %} mobile-ratio-{{ block.settings.mobile_image_ratio }} ratio-{{ block.settings.desktop_image_ratio }}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %} {{ block.shopify_attributes }}>
                        {%- else -%}<div class="block-media block-media--{{ block.id }} {% if block.settings.desktop_image != blank %}block-media--mobile{% endif %} mobile-ratio-{{ block.settings.mobile_image_ratio }} ratio-{{ block.settings.desktop_image_ratio }}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %} {{ block.shopify_attributes }}>
                        {%- endif -%}
                          <img
                            srcset="{%- if block.settings.mobile_image.width >= 375 -%}{{ block.settings.mobile_image | image_url: width: 375 }} 375w,{%- endif -%}
                              {%- if block.settings.mobile_image.width >= 750 -%}{{ block.settings.mobile_image | image_url: width: 750 }} 750w,{%- endif -%}
                              {{ block.settings.mobile_image | image_url }} {{ block.settings.mobile_image.width }}w"
                            sizes="calc(720px * 1)"
                            class="block-media__image block-media__image--mobile"
                            src="{{ block.settings.mobile_image | image_url: width: 750 }}"
                            loading="lazy"
                            draggable="false"
                            alt="{{ block.settings.mobile_image.alt | escape }}"
                            width="{{ block.settings.mobile_image.width }}"
                            height="{{ block.settings.mobile_image.width | divided_by: block.settings.mobile_image.aspect_ratio }}"
                            style="object-position: {{ block.settings.mobile_image.presentation.focal_point }};">
                        {%- if block.settings.image_link != blank -%}</a>{%- else -%}</div>{%- endif -%}
                    {%- endif -%}
                    {%- if block.settings.desktop_image == blank and block.settings.mobile_image == blank -%}
                        {%- if block.settings.image_link != blank -%}<a href="{{ block.settings.image_link }}" {% if block.settings.target_blank %}target="_blank"{% endif %} class="block-media block-media--{{ block.id }} block-media--desktop {% unless block.settings.mobile_image != blank %} block-media--all {% endunless %} ratio-{{ block.settings.desktop_image_ratio }}" {{ block.shopify_attributes }}>
                        {%- else -%}<div class="block-media block-media--{{ block.id }} block-media--desktop {% unless block.settings.mobile_image != blank %} block-media--all {% endunless %} ratio-{{ block.settings.desktop_image_ratio }} mobile-ratio-{{ block.settings.mobile_image_ratio }}" {{ block.shopify_attributes }}>
                        {%- endif -%} 
                          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                          {%- if block.settings.image_link != blank -%}</a>
                          {%- else -%}</div>
                        {%- endif -%}
                    {% endif %}
                  {%- when 'empty_space' -%}
                    {%- render 'empty-space', block: block -%}
                  {%- when 'line' -%}
                    {%- render 'line', block: block -%}
                  {%- when 'custom_liquid' -%}
                    {%- render 'custom-liquid', block: block -%}
                  {%- when 'social_media' -%}
                    {%- render 'social-media', social-media_settings: block.settings, type: block.type, block_item: block, section_settings: section.settings -%}
                  {%- when 'contacts' -%}
                    {%- render 'contacts', contacts_settings: block.settings, block_item: block -%}
                  {%- when 'newsletter_form' -%}
                    <form-state class="promo-popup__newsletter-form {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %}" {{ block.shopify_attributes }}>
                        {% form 'customer', class: 'promo-popup-newsletter-form' %}
                          <input type="hidden" name="contact[tags]" value="newsletter">
                          {%- if form.posted_successfully? -%}
                            <h3 class="subheading subheading--{{ settings.typography_preset }} success-color" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{{ 'newsletter.success' | t }}</h3>
                          {%- endif -%}
                          {%- if form.errors -%}
                            <h2 class="subheading subheading--{{ settings.typography_preset }} error-color" tabindex="-1" autofocus id="Newsletter-error--{{ section.id }}">
                              {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                            </h2>
                          {%- endif -%}
                          <div class="fields-wrapper">
                            <div class="field">
                              {%- if block.settings.label != blank -%}
                                <label class="label label--{{ settings.typography_preset }} {% if settings.dim_text %}dim{% endif %}" for="NewsletterForm--{{ section.id }}" style="text-align: start;">
                                  {{ block.settings.label | append: '*' }}
                                </label>
                              {%- endif -%}
                              <input
                                id="NewsletterForm--{{ section.id }}"
                                type="email"
                                name="contact[email]"
                                class="input input--{{ settings.typography_preset }} required {% if form.errors %}invalid{% endif %}"
                                value="{{ form.email }}"
                                aria-required="true"
                                required="required"
                                autocorrect="off"
                                autocapitalize="off"
                                autocomplete="email"
                                {% if form.errors %}
                                  autofocus
                                  aria-invalid="true"
                                  aria-describedby="Newsletter-error--{{ section.id }}"
                                {% elsif form.posted_successfully? %}
                                  aria-describedby="Newsletter-success--{{ section.id }}"
                                {% endif %}
                                placeholder="{{ block.settings.placeholder }}">
                            </div>
                          </div>
                          <button type="submit" class="promo-popup__newsletter-subscribe big-button big-button--{{ settings.typography_preset }}" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                            {{ 'newsletter.button_label' | t }}
                          </button>
                        {% endform %}
                    </form-state>
                    {%- if block.settings.caption != blank -%}
                      <div class="content-text content-text--{{ settings.typography_preset }} richtext {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}">
                          <object>
                            {{ block.settings.caption }}
                          </object>
                      </div>
                    {%- endif -%}
                  {%- when 'promo_code' -%}
                    {%- render 'promo-code', block: block, promo_code: block.settings.promo_code -%}
                  {%- when 'close_button' -%}
                    {%- if block.settings.button_label != blank -%}
                      <div {{ block.shopify_attributes }} class="close-button block__button--{{ block.settings.button_style }} {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %}">
                        <button type="button" class="close-popup {{ block.settings.button_style }}-button button--{{ settings.typography_preset }} {% if block.settings.button_style == 'link' and settings.enable_animated_underline %}link-button--underline{% endif %}" data-popup-toggle aria-label="{{ 'accessibility.close' | t }}">
                        {{ block.settings.button_label }}
                        </button>
                      </div>
                    {%- endif -%}
                {%- endcase -%}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    {% if section.settings.enable_sticky_tab %}
      <div class="promo-sticky-tab-{{ section.id }} promo-sticky-tab promo-sticky-tab--{{ section.settings.position }}">
        {% liquid 
          assign invertTab = false
          if section.settings.color_type == 'invert' and section.settings.invert_sticky_tab == false
            assign invertTab = true
          elsif section.settings.color_type == 'default' and section.settings.invert_sticky_tab 
           assign invertTab = true
          else 
            assign invertTab = false
          endif
        %}
        {% style %}
            .promo-sticky-tab-{{ section.id }} {
              {% if invertTab == false and section.settings.color_type == 'invert' %}
                --layout-text-color:
                    {{ settings.layout_text_color.red }},
                    {{ settings.layout_text_color.green }},
                    {{ settings.layout_text_color.blue }};
                --popup-background-color:
                    {{ settings.popup_background_color.red }},
                    {{ settings.popup_background_color.green }}, 
                    {{ settings.popup_background_color.blue }};
                --layout-background-color:
                    {{ settings.popup_background_color.red }},
                    {{ settings.popup_background_color.green }}, 
                    {{ settings.popup_background_color.blue }};
              {% endif %}
              {% if invertTab %}
                --layout-text-color:
                  {{ settings.popup_background_color.red }},
                  {{ settings.popup_background_color.green }},
                  {{ settings.popup_background_color.blue }};
                --popup-background-color:
                    {{ settings.layout_text_color.red }},
                    {{ settings.layout_text_color.green }}, 
                    {{ settings.layout_text_color.blue }};
                --layout-background-color:
                    {{ settings.layout_text_color.red }},
                    {{ settings.layout_text_color.green }}, 
                    {{ settings.layout_text_color.blue }};
              {% endif %}
              {% if section.settings.color_type == 'custom' %}
                --layout-text-color:
                    {{ section.settings.text_color.red }},
                    {{ section.settings.text_color.green }}, 
                    {{ section.settings.text_color.blue }};
                --layout-background-color:
                    {{ section.settings.background_color.red }},
                    {{ section.settings.background_color.green }}, 
                    {{ section.settings.background_color.blue }};
                --popup-background-color:
                    {{ section.settings.background_color.red }},
                    {{ section.settings.background_color.green }}, 
                    {{ section.settings.background_color.blue }};
              {% endif %}
              {% if section.settings.color_type == 'custom' and section.settings.invert_sticky_tab %}
                --layout-text-color:
                    {{ section.settings.background_color.red }},
                    {{ section.settings.background_color.green }}, 
                    {{ section.settings.background_color.blue }};
                --layout-background-color:
                    {{ section.settings.text_color.red }},
                    {{ section.settings.text_color.green }}, 
                    {{ section.settings.text_color.blue }};
                --popup-background-color:
                    {{ section.settings.text_color.red }},
                    {{ section.settings.text_color.green }}, 
                    {{ section.settings.text_color.blue }};
              {% endif %}
            }
        {% endstyle %}
        <button class="{{ invertTab }} open-sticky-tab promo-sticky-tab__button" data-popup-toggle aria-label="{{ section.settings.sticky_tab_label }}">
          {% assign icon = section.settings.icon %}
          {% if icon != 'none' %}
            <span class="promo-sticky-tab__icon {% if section.settings.label_size != 'default' %}{{ section.settings.label_size }}{% endif %}">
                {% if icon == 'arrow_down' %}
                    {% if weight == 'regular' %}
                    {% render 'icon-accordion', icon: 'arrow-down-regular' %}
                    {% elsif weight == 'medium' %}
