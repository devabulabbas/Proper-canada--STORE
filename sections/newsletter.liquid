{% liquid
    assign newsletter_overlay_background = section.settings.overlay_color
    if section.settings.overlay_gradient != blank
      assign newsletter_overlay_background = section.settings.overlay_gradient
    endif
    assign settings_page_width = settings.max_page_width | append: 'px'
    if settings.max_page_width == 'full_width'
      assign settings_page_width = '100vw'
    endif
%}

{% style %}
    #shopify-section-{{ section.id }} {
      --padding-top: {{ section.settings.desktop_padding_top }}px;
      --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
      --vertical-position: {{ section.settings.vertical_content_position }};
      --horizontal-position: {{ section.settings.horizontal_content_position }};
      --overlay-background: {{ newsletter_overlay_background }};
      --section-height: {{ section.settings.desktop_height }}vh;
      --video-mobile-height: {{ section.settings.mobile_height }}vh;

      {% if section.settings.color_type == 'invert' %}
          --layout-text-color:
          {{ settings.layout_background_color.red }},
          {{ settings.layout_background_color.green }},
          {{ settings.layout_background_color.blue }};
          --layout-background-color:
          {{ settings.layout_text_color.red }},
          {{ settings.layout_text_color.green }}, 
          {{ settings.layout_text_color.blue }};
      {% endif %}
      {% if section.settings.color_type == 'custom' %}
          --layout-text-color:
          {{ section.settings.text_color.red }},
          {{ section.settings.text_color.green }}, 
          {{ section.settings.text_color.blue }};
          --layout-background-color:
          {{ section.settings.background_color.red }},
          {{ section.settings.background_color.green }}, 
          {{ section.settings.background_color.blue }};
      {% endif %}  
      color: rgb(var(--layout-text-color));
    }
    #shopify-section-{{ section.id }} .banner__content-wrapper {
      background-color: rgb(var(--layout-background-color));
      color: rgb(var(--layout-text-color));
    }
    #shopify-section-{{ section.id }} .hidden-backgroud .banner__content-wrapper {
      background-color: transparent;
    }
    @media screen and (max-width: 920px) {
      #shopify-section-{{ section.id }} {
        --padding-top: {{ section.settings.mobile_padding_top }}px;
        --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      }
    }
    #shopify-section-{{ section.id }} .banner__media::after {
      opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
      background: var(--overlay-background);
    }
{% endstyle %}

<div class="section-newsletter banner banner--{{ settings.white_space }} banner--{{ section.settings.section_width }} ordinal-section ordinal-section--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines lines{% endif %}  {% if section.settings.section_width != 'full-width' %}section-padding--{{ settings.white_space }}{% endif %} {% if section.settings.section_width != 'full-width' %}{% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}{% endif %} color-{{ section.settings.color_type }} {% if section.settings.color_type != 'default' %}no-default-color{% endif %}">
    <div class="banner__wrapper {% if section.settings.content_under_image %}below{% else %}over{% endif %}">
        <div class="banner__media ">
          {% comment %} theme-check-disable ImgLazyLoading {% endcomment %}
            {%- if section.settings.desktop_image != blank -%}
                <div class="banner__block-media banner__block-media--desktop {% unless section.settings.mobile_image != blank %} banner__block-media--all {% endunless %}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                    <img srcset="{%- if section.settings.desktop_image.width >= 165 -%}{{ section.settings.desktop_image | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if section.settings.desktop_image.width >= 375 -%}{{ section.settings.desktop_image | image_url: width: 375 }} 375w,{%- endif -%}
                    {%- if section.settings.desktop_image.width >= 550 -%}{{ section.settings.desktop_image | image_url: width: 550 }} 550w,{%- endif -%}
                    {%- if section.settings.desktop_image.width >= 750 -%}{{ section.settings.desktop_image | image_url: width: 750 }} 750w,{%- endif -%}
                    {%- if section.settings.desktop_image.width >= 1100 -%}{{ section.settings.desktop_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                    {%- if section.settings.desktop_image.width >= 1500 -%}{{ section.settings.desktop_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                    {%- if section.settings.desktop_image.width >= 2200 -%}{{ section.settings.desktop_image | image_url: width: 2200 }} 2200w,{%- endif -%}
                    {%- if section.settings.desktop_image.width >= 3000 -%}{{ section.settings.desktop_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                    {{ section.settings.desktop_image | image_url }} {{ section.settings.desktop_image.width }}w" src="{{ section.settings.desktop_image | image_url: width: 1700 }}"
                    sizes="(min-width: {{ settings_page_width }}) {{ settings_page_width }}, 100vw"
                    alt="{{ section.settings.desktop_image.alt | escape }}" 
                    src="{{ section.settings.desktop_image | image_url: width: 1500 }}"
                    {% if section.index > 2 %}loading="lazy"{% endif %}
                    draggable="false"
                    width="{{ section.settings.desktop_image.width }}" 
                    height="{{ section.settings.desktop_image.height }}" 
                    class="banner__image banner__image--desktop"
                    style="object-position: {{ section.settings.desktop_image.presentation.focal_point }};">
                </div>
              {% endif %}
            {%- if section.settings.mobile_image != blank -%}
                <div class="banner__block-media {% if section.settings.desktop_image != blank %}banner__block-media--mobile{% endif %}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                    <img
                      srcset="{%- if section.settings.mobile_image.width >= 375 -%}{{ section.settings.mobile_image | image_url: width: 375 }} 375w,{%- endif -%}
                        {%- if section.settings.mobile_image.width >= 750 -%}{{ section.settings.mobile_image | image_url: width: 750 }} 750w,{%- endif -%}
                        {{ section.settings.mobile_image | image_url }} {{ section.settings.mobile_image.width }}w"
                      sizes="(min-width: {{ settings_page_width }}) {{ settings_page_width }}, 100vw"
                      class="banner__image banner__image--mobile"
                      src="{{ section.settings.mobile_image | image_url: width: 1500 }}"
                      {% if section.index > 2 %}loading="lazy"{% endif %}
                      draggable="false"
                      alt="{{ section.settings.mobile_image.alt | escape }}"
                      width="{{ section.settings.mobile_image.width }}"
                      height="{{ section.settings.mobile_image.width | divided_by: section.settings.mobile_image.aspect_ratio }}"
                      style="object-position: {{ section.settings.mobile_image.presentation.focal_point }};"
                    >
                </div>
            {%- endif -%}
            {% comment %} theme-check-enable ImgLazyLoading {% endcomment %}
            {%- if section.settings.mobile_image == blank and section.settings.desktop_image == blank -%}
                <div class="banner__block-media banner__block-media--desktop {% unless section.settings.mobile_image != blank %} banner__block-media--all {% endunless %}">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
            {%- endif -%}
        </div>
        <div class="banner__content {% if section.settings.fill_content == false %} hidden-backgroud{% endif %}">
          {% if section.blocks.size > 0 %}
           <div class="banner__content-wrapper section-newsletter__wrapper {% if section.settings.center_text %}center{% else %}start{% endif %}" style="text-align: {% if section.settings.center_text %}center{% else %}start{% endif %};">
                {%- for block in section.blocks -%}
                    {%- case block.type -%}
                        {%- when 'subheading' -%}
                            <{{ block.settings.subheading_tag }} {{ block.shopify_attributes }} class="content-subheading content-subheading--{{ settings.typography_preset }} {% if block.settings.subheading_size != 'default' %}{{ block.settings.subheading_size }}{% endif %} {% if settings.dim_text %}dim{% endif %}">{{ block.settings.subheading }}</{{ block.settings.subheading_tag }}>
                        {%- when 'heading' -%}   
                            <{{ block.settings.heading_tag }} {{ block.shopify_attributes }} class="content-heading {% if section.settings.color_type == 'default' and settings.accent_color_for_headings %}content-heading--accent{% endif %} content-heading--{{ settings.typography_preset }} {% if block.settings.heading_size != 'default' %}{{ block.settings.heading_size }}{% endif %}">{{ block.settings.heading }}</{{ block.settings.heading_tag }}>
                        {%- when 'text' -%}
                            <div class="content-text content-text--{{ settings.typography_preset }} {% if block.settings.dim_text %}dim{% endif %} richtext {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}" {{ block.shopify_attributes }}>
                              <object>
                                {{ block.settings.text }}
                              </object>
                            </div>
                        {%- when 'newsletter_form' -%}
                            <form-state class="section-newsletter__form {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %}" {{ block.shopify_attributes }}>
                                {% form 'customer', class: 'section-newsletter-form' %}
                                  <input type="hidden" name="contact[tags]" value="newsletter">
                                  {%- if form.posted_successfully? -%}
                                    <h3 class="subheading subheading--{{ settings.typography_preset }} success-color" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{{ 'newsletter.success' | t }}</h3>
                                  {%- endif -%}
                                  {%- if form.errors -%}
                                    <h2 class="subheading subheading--{{ settings.typography_preset }} error-color" tabindex="-1" autofocus id="Newsletter-error--{{ section.id }}">
                                      {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                                    </h2>
                                  {%- endif -%}
                                  <div class="fields-wrapper">
                                    <div class="field">
                                      {%- if block.settings.label != blank -%}
                                        <label class="label label--{{ settings.typography_preset }} {% if settings.dim_text %}dim{% endif %}" for="NewsletterForm--{{ section.id }}" style="text-align: start;">
                                          {{ block.settings.label | append: '*' }}
                                        </label>
                                      {%- endif -%}
                                      <input
                                        id="NewsletterForm--{{ section.id }}"
                                        type="email"
                                        name="contact[email]"
                                        class="input input--{{ settings.typography_preset }} required {% if form.errors %}invalid{% endif %}"
                                        value="{{ form.email }}"
                                        aria-required="true"
                                        required="required"
                                        autocorrect="off"
                                        autocapitalize="off"
                                        autocomplete="email"
                                        {% if form.errors %}
                                          autofocus
                                          aria-invalid="true"
                                          aria-describedby="Newsletter-error--{{ section.id }}"
                                        {% elsif form.posted_successfully? %}
                                          aria-describedby="Newsletter-success--{{ section.id }}"
                                        {% endif %}
                                        placeholder="{{ block.settings.placeholder }}">
                                    </div>
                                  </div>
                                  <button type="submit" class="section-newsletter__subscribe big-button big-button--{{ settings.typography_preset }}" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                                    {{ 'newsletter.button_label' | t }}
                                  </button>
                                {% endform %}
                            </form-state>
                            {%- if block.settings.caption != blank -%}
                                <div class="content-text content-text--{{ settings.typography_preset }} richtext {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}">
                                    <object>
                                      {{ block.settings.caption }}
                                    </object>
                                </div>
                            {%- endif -%}
                        {%- when 'button' -%}
                          {%- render 'button', block: block -%}
                        {%- when 'context_image' -%}
                          {%- render 'context-image', block_or_section: block, shopify_attributes: true -%}
                        {%- when 'block_image' -%}
                            {%- render 'block-image', block: block -%}
                        {%- when 'empty_space' -%}
                          {%- render 'empty-space', block: block -%}
                        {%- when 'video_button' -%}
                          {%- render 'video-button', block_settings: block.settings, block: block -%}
                        {%- when 'line' -%}
                            {%- render 'line', block: block -%}
                        {%- when 'custom_liquid' -%}
                            {%- render 'custom-liquid', block: block -%}
                        {%- when 'promo_code' -%}
                            {%- render 'promo-code', block: block, promo_code: block.settings.promo_code -%}
                    {%- endcase -%}       
                {%- endfor -%}
            </div>
          {% endif %}
        </div>
    </div>
</div>

