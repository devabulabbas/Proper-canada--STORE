{% schema %}
{
    "name": "t:sections.banner-grid.name",
    "tag": "section",
    "class": "banner-grid",
    "max_blocks": 20,
    "settings": [
        {
            "type": "checkbox",
            "id": "content_on_hover",
            "default": false,
            "label": "t:sections.banners.content_on_hover.label"
        },
        {
            "type": "range",
            "id": "grid_gap",
            "min": 0,
            "max": 80,
            "step": 1,
            "unit": "px",
            "label": "t:sections.banner-grid.settings.grid_gap.label",
            "default": 24
        },
        {
          "type": "range",
          "id": "mobile_grid_gap",
          "min": 0,
          "max": 40,
          "step": 1,
          "unit": "px",
          "label": "t:sections.banner-grid.settings.mobile_grid_gap.label",
          "default": 16
      },
      {
        "type": "radio",
        "id": "section_width",
        "options": [
          {
            "value": "wide",
            "label": "t:sections.all.section_width.options__3.label"
          },
          {
            "value": "narrow",
            "label": "t:sections.all.section_width.options__4.label"
          }
        ],
        "default": "wide",
        "label": "t:sections.all.section_width.label"
      },
      {
        "type": "select",
        "id": "image_radius",
        "options": [
          {
            "value": "default",
            "label": "t:sections.all.corner_radius.options__1.label"
          },
