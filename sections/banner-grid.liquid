    --grid-gap: {{ section.settings.grid_gap }}px;
    --mobile-grid-gap: {{ section.settings.mobile_grid_gap }}px;

    {% if section.settings.image_radius == 'default' %}
      --image-radius: {{ settings.images_and_sections_radius }};
    {% else %}
      --image-radius: {{ section.settings.image_radius }};
    {% endif %}
    {% if section.settings.grid_gap == 0 %}
      --image-radius: 0px;
      {% if section.settings.image_radius == 'default' %}
        --container-radius: {{ settings.images_and_sections_radius }};
      {% else %}
        --container-radius: {{ section.settings.image_radius }};
      {% endif %}
    {% endif %}

